<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2952A2"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Operation.Multiply">

    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="23dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Score"
            android:textColor="#FFC107"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewScore"
            android:layout_width="60sp"
            android:layout_height="37dp"
            android:layout_margin="7dp"
            android:background="@drawable/sub_back"
            android:gravity="center"
            android:text="0"
            android:textColor="#009688"
            android:textSize="25dp"
            android:textStyle="bold" />


        <TextView
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Life"
            android:textColor="#FFFFC107"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewLife"
            android:layout_width="60sp"
            android:layout_height="37dp"
            android:layout_margin="7dp"
            android:layout_weight="0"
            android:background="@drawable/sub_back"
            android:gravity="center"
            android:text="3"
            android:textColor="#F10000"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Time"
            android:textColor="#FFC107"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="60sp"
            android:layout_height="37dp"
            android:layout_margin="7dp"
            android:background="@drawable/sub_back"

            android:gravity="center"
            android:text="60"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewQuestion"
            android:layout_width="350dp"
            android:layout_height="98dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="42sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editTextAnswer"
            android:layout_width="243dp"
            android:layout_height="49dp"
            android:layout_margin="7dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/sub_back"
            android:gravity="center"
            android:layout_gravity="center"
            android:inputType="number"
            android:textColor="#009688"
            android:textSize="25sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnOkay"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:background="@drawable/btn_okay"
            android:text="Okay"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:background="@drawable/pass_btn"
            android:text="Pass"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:textSize="35sp" />

    </LinearLayout>
</LinearLayout>